	"version": "0.2.0",
	"configurations": [
		{
			"type": "cppdbg",
			"request": "launch",
			"name": "Launch dev-clang",
			"program": "${workspaceFolder}/out/build/dev-clang/bin/rescidx_test",
			"args": [],
			"cwd": "${workspaceFolder}/out/build/dev-clang/bin/",
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		},
		{
			"type": "cppdbg",
			"request": "launch",
			"name": "Launch dev-linux",
			"program": "${workspaceFolder}/out/build/dev-linux/bin/rescidx_test",
			"args": [],
			"cwd": "${workspaceFolder}/out/build/dev-linux/bin/",
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		},
	]
}
